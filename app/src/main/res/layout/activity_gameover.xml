<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="fhku.drawgame.GameOverActivity"
    android:background="#fff7f7">



        <TextView
            android:id="@+id/wonlost"
            android:textSize="30sp"
            android:text="You guessed wrong!"
            android:textColor="#e50000"
            android:fontFamily="casual"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textAlignment="center"
            android:layout_above="@id/restart"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="120dp"


            />

        <Button
            android:onClick="restart"
            android:id="@+id/restart"
            android:text="New Game"
            android:textSize="20dp"
            android:textColor="#920"
            android:background="@drawable/button_blau"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="20dp"


            />

        <Button
            android:onClick="redo"
            android:id="@+id/redo"
            android:text="Try again"
            android:textSize="20dp"
            android:textColor="#920"
            android:background="@drawable/button_blau"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_below="@id/restart"
            android:layout_marginTop="10dp"

            />



</RelativeLayout>
