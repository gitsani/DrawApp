<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="fhku.drawgame.StartActivity"
    android:background="@drawable/haha">



    <Button
        android:onClick="start"
        android:id="@+id/startbutton"
        android:text="DRAW!"
        android:fontFamily="monospace"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="#920"
        android:background="@drawable/button_blau"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"

        />


    <TextView
        android:id="@+id/banner"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Draw Game"
        android:fontFamily="casual"
        android:background="@drawable/button_rot"
        android:textAlignment="center"
        android:textSize="50dp"
        android:textStyle="bold"
        android:textColor="#fff4f4"
        android:layout_above="@id/startbutton"
        android:layout_marginBottom="70dp"
        android:layout_centerHorizontal="true"
        />

</RelativeLayout>
