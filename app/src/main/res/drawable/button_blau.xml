<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#a53423" />
            <gradient android:angle="-90" android:startColor="#8d2d1e" android:endColor="#d4432d"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#a53423" />
            <solid android:color="#bc3c28"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#ef54" />
            <gradient android:angle="-90" android:startColor="#ff3232" android:endColor="#ee5" />
        </shape>
    </item>
</selector>